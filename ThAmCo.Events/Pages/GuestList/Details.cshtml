@page
@model ThAmCo.Events.Pages.GuestList.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Guest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.GuestName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.GuestName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.GuestPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.GuestPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.GuestEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.GuestEmail)
        </dd>
    </dl>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GuestBooking[0].Event.EventName)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.GuestBooking[0].Event.EventType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GuestBooking[0].Event.EventDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GuestBooking[0].Event.ReservationReference)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GuestBooking[0].Event.FoodBookingId)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestBooking[0].Attendance)
            </th>
        </tr>
</thead>
    <tbody>
@foreach (var item in Model.GuestBooking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.EventName)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.EventType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.EventDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.ReservationReference)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.FoodBookingId)
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attendance)
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
