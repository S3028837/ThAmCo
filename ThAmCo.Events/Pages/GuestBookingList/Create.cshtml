@page
@model ThAmCo.Events.Pages.GuestBookingList.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Book</h1>

<h4>GuestBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuestBooking.GuestId" class="control-label"></label>
                <select asp-for="GuestBooking.GuestId" class ="form-control" asp-items="ViewBag.GuestId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Event Name</label>
                <input class ="form-control" value="@ViewData["EventName"]" readonly/>
            </div>
            <div>
            <input type="hidden" asp-for="GuestBooking.EventId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/EventList/Guests" asp-route-id="@Model.GuestBooking.EventId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
