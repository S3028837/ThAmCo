@page
@model ThAmCo.Events.Pages.StaffList.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.StaffName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.StaffName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.StaffEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.StaffEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.FirstAidTrained)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.FirstAidTrained)
        </dd>
    </dl>
    <h3>Upcoming Events</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Staffing[0].Event.EventName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Staffing[0].Event.EventType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Staffing[0].Event.EventDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Staffing[0].Event.ReservationReference)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Staffing[0].Event.FoodBookingId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Staffing)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.EventName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.EventType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.EventDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.ReservationReference)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Event.FoodBookingId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Staff.StaffId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
